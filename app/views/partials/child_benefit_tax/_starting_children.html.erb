<% @calculator.starting_children.each_with_index do |child, index| %>
  <%= render "partials/child_benefit_tax/add_new_child", :child => child, :number => index + 1 %>
<% end %>

<% if @show_new_child_form %>
  <%= render "partials/child_benefit_tax/add_new_child", :number => @calculator.starting_children.size + 1 %>
<% end %>

<%= submit_tag("Add a new starting child", { :class => "button" }) %>
