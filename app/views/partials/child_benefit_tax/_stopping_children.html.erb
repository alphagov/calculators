<% @calculator.stopping_children.each_with_index do |child, index| %>
  <%= render "partials/child_benefit_tax/add_new_stopping_child", :child => child, :number => index + 1 %>
<% end %>

<% if @show_old_child_form %>
  <%= render "partials/child_benefit_tax/add_new_stopping_child", :number => @calculator.stopping_children.size + 1, :child => nil %>
<% end %>
<%= submit_tag("Add a new stopping child", { :class => "button" }) %>
